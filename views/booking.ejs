<!DOCTYPE html>
<html lang="en">
    <head>
        <%-include('../src/components/head');%>
        <link rel="stylesheet" href="../stylesheets/booking.css" />
        <title><%= title%></title>
        <script defer src="../JS/booking.js"></script>
    </head>
    <body>
        <%- include('../src/components/nav')%>
        <div class="container mt-5">
            <h2 class="mb-4 text-center">Book an Appointment</h2>

            <div id="not-login">
                <h3>Please Login</h3>
                <p>For Login , Click <a href="\login">here</a></p>
            </div>
            <!-- Appointment Form -->
            <div id="login" style="display: none">
                <form>
                    <!-- User Details -->
                    <div class="form-group">
                        <label for="name">Your Name</label>
                        <input
                            type="text"
                            class="form-control"
                            id="name"
                            placeholder="Enter your name"
                            required
                        />
                    </div>

                    <div class="form-group">
                        <label for="phone">Phone Number</label>
                        <input
                            type="tel"
                            class="form-control"
                            id="phone"
                            placeholder="Enter your phone number"
                            required
                        />
                    </div>

                    <!-- Avabile doctors -->
                    <div class="form-group">
                        <label for="doctor">Select Doctor</label>
                        <select class="form-control" id="doctor" required>
                            <!-- Add available doctors dynamically here -->
                            <option value="john-doe">Dr. John Doe</option>
                            <option value="jane-smith">Dr. Jane Smith</option>
                            <!-- Add more available doctors as needed -->
                        </select>
                    </div>

                    <!-- Appointment Time Selection -->
                    <div class="form-group">
                        <label for="appointmentTime"
                            >Select Appointment Time</label
                        >
                        <select
                            class="form-control"
                            id="appointmentTime"
                            required
                        >
                            <option value="morning">Morning</option>
                            <option value="afternoon">Afternoon</option>
                            <option value="evening">Evening</option>
                        </select>
                    </div>

                    <!-- Submit Button -->
                    <button type="submit" class="btn btn-primary">
                        Book Appointment
                    </button>
                </form>
            </div>
        </div>
    </body>
</html>
