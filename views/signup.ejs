<!DOCTYPE html>
<html lang="en">
    <head>
        <%-include('../src/components/head')%>
        <title>Sign Up</title>

        <link rel="stylesheet" href="../stylesheets/signup.css" />
        <script defer src="../JS/signup.js"></script>
    </head>

    <body>
        <div class="container">
            <div class="form-container">
                <h2 class="text-center">Sign Up</h2>

                <form>
                    <label
                        ><input
                            type="radio"
                            name="userType"
                            value="doctor"
                            onchange="toggleSignupForm()"
                        />
                        Doctor</label
                    >
                    <label
                        ><input
                            type="radio"
                            name="userType"
                            value="patient"
                            onchange="toggleSignupForm()"
                        />
                        Patient</label
                    >
                </form>

                <!-- Doctor Signup Form -->
                <form id="doctorSignupForm" style="display: none" method="post" novalidate action="/doctor-signup">
                    <%- include('../src/components/signup_doctor')%>
                </form>

                <!-- Patient Signup Form -->
                <form
                    id="patientSignupForm"
                    style="display: none"
                    method="post"
                    novalidate
                    action="/patient-signup"
                >
                    <%- include('../src/components/signup_patient')%>
                </form>

               
            </div>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
    </body>
</html>
