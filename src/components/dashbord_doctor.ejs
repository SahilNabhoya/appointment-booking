<div class="myAppointments">
    <div class="container mt-5">
        <h2 class="mb-4 text-center">Doctor - Appointments</h2>
        <!-- Doctor's Details Section -->
        <div class="d-flex justify-content-between">
            <div class="mb-4">
                <h3>Dr. <span id="name">
                        <%= user.name%>
                    </span></h3>
                
                <p>Specialty: <span id="specility">
                    <%= user.spciality%> 
                </span> Physiotherapy</p>
                <p>Contact: <span id="number">
                        <%= user.contact%>
                    </span></p>
            </div>
            <form action="/logout" method="GET">
                <button type="submit" class="btn btn-primary">Logout</button>
            </form>
        </div>

        <!-- Doctor's Appointments Table -->
        <div class="table-responsive">
            <table class="table table-bordered table-striped text-center" id="appointment_table">
            </table>
        </div>
    </div>
</div>